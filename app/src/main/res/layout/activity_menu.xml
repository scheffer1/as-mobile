<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/cadastro_livro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Menu"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_update_livro"
        android:layout_width="186dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="108dp"
        android:ems="2"
        android:text="Atualizar Livro"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add_livro" />

    <Button
        android:id="@+id/button_list_livro"
        android:layout_width="186dp"
        android:layout_height="55dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="108dp"
        android:ems="2"
        android:text="Listar Livros"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_add_livro"
        android:layout_width="186dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="108dp"
        android:ems="2"
        android:text="Adicionar Livros"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_list_livro" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="184dp"
        android:layout_height="29dp"
        android:text="Bem vinda, Bianca"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="113dp" />

</androidx.constraintlayout.widget.ConstraintLayout>